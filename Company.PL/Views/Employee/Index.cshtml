@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "All Employee";
}


@if (Model.Count() > 0)
{
    <h1>All Employees </h1>
    <a asp-action="Create" class="btn btn-success mt-3">Add New Employee</a>

    <form  asp-action="Index" class=" w-75 mx-auto row my-4">

        <div class="col-md-10 ">
            <input class="form-control" placeholder="Employee Name" name="name" type="text" />
        </div>
        <div class="col-md-2 ">
            <button type="submit" class="btn btn-outline-secondary"> Search</button>
       </div>
         
    </form>



    <div class="row">
        <div class="col-md-12 ">
            <div class="table-responsive table-responsive-sm">
            <table class="table table-striped table-hover mt-5">
                <thead>
                    <tr>
                            <td>@Html.DisplayNameFor(E => E.Image)</td>
                        <td>@Html.DisplayNameFor(E => E.Name)</td>
                        <td>@Html.DisplayNameFor(E => E.Age)</td>
                        <td>@Html.DisplayNameFor(E => E.Address)</td>
                        <td>@Html.DisplayNameFor(E => E.Salary)</td>
                        <td>@Html.DisplayNameFor(E => E.Department)</td>
                        <td>@Html.DisplayNameFor(E => E.Email)</td>
                        <td>@Html.DisplayNameFor(E => E.PhoneNumber)</td>
                        <td>@Html.DisplayNameFor(E => E.HireDate)</td>
                        <td>@Html.DisplayNameFor(E => E.IsActive)</td>
                        <td> Details</td>
                        <td>Edit</td>
                        <td>Delete</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                                <td><img hieght="50" width="50" src="~/Files/Images/@item.ImageName" alt="Employee Image" class="img-fluid rounded-2" /></td>
                            <td>@item.Name</td>
                            <td>@item.Age</td>
                            <td>@item.Address</td>
                            <td>@Html.DisplayFor(E => item.Salary)</td>
                            <td>@Html.DisplayFor(E => item.Department.Name)</td>
                            <td>@Html.DisplayFor(E => item.Email)</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.HireDate</td>
                            <td>
                                @if (@item.IsActive)
                                {
                                    <i style="color:green;" class="fa-solid fa-circle"></i>
                                }
                                else
                                {
                                    <i style="color:red;" class="fa-solid fa-circle"></i>
                                }
                            </td>

                            <partial name="ButtonsPartialView" model="@item.Id"></partial>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
      </div>
    </div>
   
}
else
{
    <h1 class="alert alert-warning "> There Is No Employee</h1>
}

