@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<h2>Login</h2>

<div class="text-danger" asp-validation-summary="All">

</div>

<form asp-action="Login">
  
    <div class="input-box">
        <input asp-for="Email" placeholder="Email" required>
    </div>
    <span class="text-danger" asp-validation-for="Email"></span>

    <div class="input-box">
        <input asp-for="Password" placeholder="Password" required>
    </div>
    <span class="text-danger" asp-validation-for="Password"></span>



    <div class="policy">
        <input asp-for="RememberMe">
        <h3>Remember Me ?</h3>
    </div>
    <div class="input-box button">
        <input type="Submit" value="Login Now">
    </div>
    <div class="text">
        <h3>Dont have an account? <a asp-action="SignUp">SignUp now</a></h3>
    </div>
    <div class="text d-flex justify-content-center align-items-center">
        <a asp-action="ForgetPassword">Forget Password</a>
    </div>
</form>

@section ValidationScriptSection
{
    <partial name="_ValidationScriptsPartial"></partial>
}

